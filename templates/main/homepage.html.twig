{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} Starshop{% endblock %}
{% block body %}
<h1><strong>Hello World !</strong></h1>

<div>
    <h1>Mon vaissaux</h1>
    <table>
        <tr>
            <th>Name</th>
            <td>
            <a href="{{ path('app_starship_show', { id: myShip.id }) }} ">
            {{myShip.name}}
            </td>
        </tr>
        <tr>
            <th>Class</th>
            <td>{{myShip.class}}</td>
        </tr>
        <tr>
            <th>Captain</th>
            <td>{{myShip.captain}}</td>
        </tr>
        <tr>
            <th>Status</th>
            <td>{{myShip.status}}</td>
        </tr>
    </table>
</div>
{% endblock %}